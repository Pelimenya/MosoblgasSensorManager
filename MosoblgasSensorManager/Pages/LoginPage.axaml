<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MosoblgasSensorManager.Pages.LoginPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Width="60" Margin="5, 0">Логин:</TextBlock>
                <TextBox x:Name="login" Width="150" Height="40" VerticalContentAlignment="Center">admin</TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Width="60" Margin="5, 0" Text="Пароль:">123</TextBlock>
                <TextBox PasswordChar="*" Width="150" Height="40" Margin="0,10" x:Name="password" VerticalContentAlignment="Center">
                </TextBox>
            </StackPanel>
            <Button Content="Войти" Click="Button_OnClick" HorizontalAlignment="Center"></Button>
        </StackPanel>
    </Grid>
</UserControl>
