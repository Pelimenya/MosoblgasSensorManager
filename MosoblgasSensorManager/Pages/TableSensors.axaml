<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MosoblgasSensorManager.Pages.TableSensors">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Margin="10">
            <DataGrid x:Name="dg" 
                      AutoGenerateColumns="True"
                      IsReadOnly="False"
                      GridLinesVisibility="All"
                      BorderThickness="1"
                      BorderBrush="Gray"
                      RowBackground="White"
                      HeadersVisibility="All"
                      CanUserSortColumns="True"
                      CanUserResizeColumns="True">
            </DataGrid>
        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10" Grid.Row="1">
            <Button Content="Добавить" Click="AddSensor" Margin="5" Padding="10"/>
            <Button Content="Удалить" Click="DeleteSensor" Margin="5" Padding="10"/>
            <Button Content="Сохранить изменения" Click="SaveChanges" Margin="5" Padding="10"/>
        </StackPanel>
    </Grid>
</UserControl>